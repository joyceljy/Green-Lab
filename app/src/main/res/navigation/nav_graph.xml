<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/OnBoardingFragment">

    <!-- OnBoardingFragment -->
    <fragment android:id="@+id/OnBoardingFragment"
              android:name="com.codingwithmitch.navigationcomponentsexample.OnBoardingFragment"
              android:label="fragment_main"
              tools:layout="@layout/fragment_onboarding">
        <action android:id="@+id/action_OnBoardingFragment_to_SignUpFragment"
                app:destination="@id/SignUpFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
        />
    </fragment>


    <!-- SignInFragment -->
    <fragment android:id="@+id/SignInFragment"
              android:name="com.codingwithmitch.navigationcomponentsexample.SignInFragment"
              android:label= "fragment_sign_in"
              tools:layout="@layout/fragment_sign_in">

        <action android:id="@+id/action_SignInFragment_to_HomeFragment"
            app:destination="@id/HomeFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <argument
                android:name="username"/>
        <argument
                android:name="password" />
        <argument
                android:name="email" />
        <argument
                android:name="address" />
        <argument
                android:name="phone" />
        <argument
                android:name="gender" />
    </fragment>


    <!-- SignUpFragment -->
    <fragment android:id="@+id/SignUpFragment"
              android:name="com.codingwithmitch.navigationcomponentsexample.SignUpFragment"
              android:label="fragment_sign_up"
              tools:layout="@layout/fragment_sign_up">

        <action android:id="@+id/action_SignUpFragment_to_SignInFragment"
                app:destination="@id/SignInFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left" />
    </fragment>



    <!-- HomeFragment -->
    <fragment android:id="@+id/HomeFragment"
              android:name="com.codingwithmitch.navigationcomponentsexample.HomeFragment"
              android:label="fragment_home"
              tools:layout="@layout/fragment_home">
<!--        <argument-->
<!--                android:name="usernameLogin"-->
<!--                app:argType="string" />-->
<!--        <argument-->
<!--                android:name="email"-->
<!--                app:argType="string" />-->
<!--        <argument-->
<!--                android:name="address"-->
<!--                app:argType="string" />-->
        <action android:id="@+id/action_HomeFragment_to_VideoSelectionFragment"
                app:destination="@id/VideoSelectionFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                />
    </fragment>

    <!-- VideoSelectionFragment -->
    <fragment android:id="@+id/VideoSelectionFragment"
            android:name="com.codingwithmitch.navigationcomponentsexample.VideoSelectionFragment"
            android:label="fragment_video_selection"
            tools:layout="@layout/fragment_video_selection">

        <action android:id="@+id/action_VideoSelectionFragment_to_VideoFragment"
                app:destination="@id/VideoFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                />
    </fragment>

    <!-- VideoFragment -->
    <fragment android:id="@+id/VideoFragment"
            android:name="com.codingwithmitch.navigationcomponentsexample.VideoFragment"
            android:label="fragment_video"
            tools:layout="@layout/fragment_video">
        <action android:id="@+id/action_VideoFragment_to_VideoSelectionFragment"
                app:destination="@id/VideoSelectionFragment"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                />
    </fragment>


</navigation>
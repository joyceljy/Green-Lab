<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HomeFragment">


    <TextView
            android:id="@+id/text_view_welcome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_username"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.439"
            android:text="Welcome,"
            android:textAlignment="center"
            android:textSize="50sp" />

    <TextView
            android:id="@+id/text_view_username"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_welcome"
            android:text="UserName"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="208dp"
            app:layout_constraintVertical_bias="0.495" />


    <TextView
            android:id="@+id/text_view_email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_username"
            android:text="Email"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="300dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.28" />

    <TextView
            android:id="@+id/text_view_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_email"
            android:text="Address"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="156dp"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/text_view_gender"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_address"
            android:text="Gender"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="300dp"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/text_view_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_gender"
            android:text="Phone Number"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="400dp"
            app:layout_constraintVertical_bias="0.214" />


    <TextView
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Your current location:"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="430dp"
            />


    <Button
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/bt_location"
            android:text="Get Location"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="548dp"
            app:layout_constraintHorizontal_bias="0.51" />

    <Button
            android:text="Videos"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/video_btn"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="640dp"
            app:layout_constraintHorizontal_bias="0.51" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SignInFragment">


    <TextView
            android:id="@+id/text_view_welcome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/name_in_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.414"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textSize="50sp" />

    <EditText
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/name_in_text"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signin_btn2"
            android:inputType="text"
            android:hint="Enter User Name"
            app:layout_constraintTop_toBottomOf="@+id/text_view_welcome"
            app:layout_constraintHorizontal_bias="0.499" />

    <EditText
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/password_in_text"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signin_btn2"
            android:inputType="text"
            android:hint="Enter Password"
            android:layout_marginBottom="44dp" />

    <Button
            android:text="Sign In"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/signin_btn2"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="604dp" />


</androidx.constraintlayout.widget.ConstraintLayout>